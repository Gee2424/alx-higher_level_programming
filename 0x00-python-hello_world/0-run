#!/bin/bash
python3 "$PYFILE"


# Check if the PYFILE variable is set and not empty
if [ -z "$PYFILE" ]; then
    echo "PYFILE is not set. Please set the PYFILE environment variable."
    exit 1
fi

# Check if the file exists and is a regular file
if [ ! -f "$PYFILE" ]; then
    echo "The file '$PYFILE' does not exist."
    exit 1
fi

# Execute the Python script
python3 "$PYFILE"

